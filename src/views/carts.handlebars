<h1 style="margin-top: 25px" class="title__productspage">CARRITO DE COMPRAS</h1>

{{#if cart.length}}
  <table class="table__cart bg-info bg-gradient">
    <thead>
      <tr>
        <th>Título</th>
        <th>Precio</th>
        <th>Cantidad</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>Carrito vacío</p>
{{/if}}

<script src="/socket.io/socket.io.js"></script>
<script src="js/cartController.js"></script>
