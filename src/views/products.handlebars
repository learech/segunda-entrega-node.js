<h1 style="margin-top: 25px" class="title__productspage">NUESTROS PRODUCTOS</h1>
<section>
<div class="row product justify-content-evenly containerFlex ">
    {{#each productsVisualice}}
    <div class="containerCard containerProd itemFlex" style="width: 14rem; margin-top: 5px;" id="{{this._id}}">
        <div style="margin-top: 10px; width:200px; height:200px;">
            <div style="text-align:center;">
            <img src={{this.thumbnail}} alt="Product picture{{this.id}}"  width="155" height="198">
            </div>
        </div>
        <div class="card-body">
            <h3 id="titleProduct" class="card-title">{{this.title}}</h3>
            <p id="descriptionProduct" class="card-text">{{this.description}}</p>
            <p id="priceProduct" class="card-text">$ {{this.price}}</p>
            <button onclick="putIntoCart('{{this._id}}')">Add to üõí</button> 
            <br />
        </div>
    </div>
    {{/each}}
  </div>
</section>



